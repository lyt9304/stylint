@import './modules/ui/index'

@import './modules/filter-flexible-grid'
filter-flexible-grid()

@import './modules/form-base'
form-base()

#fabu-form iframe
	display none

// images
.image-box
	padding-bottom 10px
@import './modules/image-uploader'
image-uploader()

.form-value input
	height 1em
	line-height 1em
	padding 0.5em 0
	margin 0
	border 1px solid #e3e3e3
	border-top-color #9e9e9e
	border-left-color #9e9e9e
	-webkit-box-shadow inset 0 1px 3px #ccc
	box-shadow inset 0 1px 3px #ccc
	-webkit-border-radius 5px
	border-radius 5px
	background #fff
	width 140px
	-webkit-appearance none
	-moz-appearance none
	appearance none

footer .feedback
	@import './modules/layout/footer-feedback'
	footer-feedback()
